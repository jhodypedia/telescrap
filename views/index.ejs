<!DOCTYPE html><html><head><title>DrakorFlix</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head><body class="bg-dark text-white">
<nav class="navbar navbar-dark bg-dark mb-4"><div class="container-fluid"><span class="navbar-brand">DrakorFlix</span>
<a href="/">Home</a></div></nav>
<div class="container">
  <div class="row">
    <% videos.forEach(v => { %>
      <div class="col-6 col-md-3 mb-4">
        <div class="card bg-dark text-white">
          <img src="/hls/<%= v.filename.replace('.mp4','.jpg') %>" class="card-img" alt="">
          <div class="card-img-overlay">
            <h5 class="card-title"><%= v.title %> E<%= v.episode %></h5>
            <button class="btn btn-outline-light" onclick="location='/secure/<%= v.id %>'">▶︎ Watch</button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
</body></html>
